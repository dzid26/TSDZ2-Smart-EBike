{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build",
			"command": "make",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"args": [
				"all", "-j", "--output-sync"
			],
			"options": {
				"cwd": "${workspaceFolder}/src/"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "Clean Builds",
			"command": "make",
			"args": [
				"clean"
			],

			"options": {
				"cwd": "${workspaceFolder}/src/"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "process",
			"label": "Build & Flash",
			"command": "make",
			"args": [
				"flash"
			],
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"dependsOn": [
				"Build"
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"close": true
			},
			"problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
		},

		{
			"label": "Launch OpenOCD",
			"hide": true,
			"type": "shell",
			"command": "openocd",
			"args": [
				"-f", "interface/stlink-dap.cfg",  //swim is @stlink-dap in openocd > 10.0
				"-f", "target/stm8s105.cfg"
			],
			"problemMatcher": [],
		},

		{
			"label": "Flash with OpenOCD",  //! actually doesn't seem to flash correctly
			"hide": true,
			"type": "process",
			"presentation": {
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "SDCC build",
			"command": "openocd",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"runOptions": {
				"instanceLimit": 1,
			},
			"args": [
				"-d2",
				"-f", "interface/stlink-dap.cfg",
				"-f", "target/stm8s105.cfg",
				"-c", "init",
				"-c", "reset halt",
                "-c", "load_image bin/main.hex 0x8000",
				"-c", "reset",
				"-c", "exit",
                // "-c", "program orig.hex",
			],
			"problemMatcher": [],
		},

		{
			"label": "OpenOCD reset target",
			"hide": true,
			"type": "process",
			"presentation": {
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "SDCC build",
			"command": "openocd",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"runOptions": {
				"instanceLimit": 1,
			},
			"args": [
				"-f", "interface/stlink-dap.cfg",
				"-f", "target/stm8s105.cfg",
				"-c", "init",
				"-c", "reset",
				"-c", "exit",
			],
			"problemMatcher": [],
		},
		{	//stm8 simulator doesn't  to be supported by sdcdb though
			"label": "Load main into simulator", 
			"type": "process",
			"presentation": {
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"command": "ucsim_stm8",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"runOptions": {
				"instanceLimit": 1,
			},
			"args": [
				"-t", "stm8s105",
				// -S option to connect system serial to simulator uart
				"-B",
				"-e", "run", //start simualtion
				// type break ebike_app_init or any other address to set a breakpoint
				"bin/main",
			],
			"problemMatcher": [],
		},
	],
}